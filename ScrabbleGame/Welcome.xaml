        <Button x:Name="Nbtn" Content="N" HorizontalAlignment="Left" Margin="205,299,0,0" VerticalAlignment="Top" Width="34" Height="33" FontWeight="Bold" FontFamily="Segoe UI Black" FontSize="24" Click="GuessClick"/>
