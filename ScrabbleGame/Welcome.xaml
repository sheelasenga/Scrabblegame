        <TextBox x:Name="guessleftTxt" HorizontalAlignment="Left" Height="23" Margin="282,153,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="31" TextChanged="TextBox_TextChanged"/>
